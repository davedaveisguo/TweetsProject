extends layout

block content
    .container
        .col-2of5.bg-white.profile.user-auth
            h3 Log in to Web Tweet
            form(action="/signup" method="POST")
                input.input-auth(type="text" placeholder="Username" required="" name="username")
                input.input-auth(type="password" placeholder="Password" required="" name="password")
                input.input-auth(type="password" placeholder="Repeat password" required="" name="confirmPassword")
                button.btn-primary Sign up
            h6
                | Have an account?
                a(href="/login") Log in
        include tweet